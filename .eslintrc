{
  // This file should actually be called '.eslintrc'
  // Create it at the root directory of your Meteor app


  // I want to use babel-eslint for parsing!
  "parser": "babel-eslint",
  "env": {
    // I write for browser
    "browser": true,
    // and for the server
    "node": true,
    // with Meteor
    "meteor": true,
    "es6": true,
  },
  // To give you an idea how to override rule options:
  "rules": {
    "quotes": [2, "single"],
    "eol-last": [0],
    "no-mixed-requires": [0],
    "no-underscore-dangle": [0],
    "no-extra-strict": [0],
    "strict": [0],
    "curly": [0]
  },
  "globals": {
    // define your apps globals here

    // Packages
    "Picker": false,
    "FlowRouter": false,
    "FlowLayout": false,
    "GeoJSON": false,
    "EventEmitter": false,

    // Components

    // Collections
    "Customers": true
  }
}
